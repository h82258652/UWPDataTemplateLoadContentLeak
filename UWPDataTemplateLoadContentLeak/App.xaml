<Application
    x:Class="UWPDataTemplateLoadContentLeak.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPDataTemplateLoadContentLeak">
    <Application.Resources>
        <ResourceDictionary>
            <DataTemplate x:Name="FrameworkControlTemplate">
                <Border />
            </DataTemplate>
            <DataTemplate x:Name="UserControlTemplate">
                <local:MyUserControl />
            </DataTemplate>
            <DataTemplate x:Name="FrameworkControlHostUserControlTemplate">
                <Border>
                    <local:MyUserControl />
                </Border>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
